<odoo>
    <record id="buffalo_lunch_lunch_product_form" model="ir.ui.view">
        <field name="name">lunch.product.form.inherit</field>
        <field name="model">lunch.product</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="lunch.lunch_product_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="after">
                <label for="special_description"/>
                <field name="special_description"/>
            </xpath>
        </field>
    </record>
</odoo>   
    